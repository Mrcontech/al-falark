rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if request is from an authenticated Firebase Auth user (Admin)
    function isAdmin() {
      return request.auth != null;
    }

    // Admins have full access to everything
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Custom Sovereign Auth Rules for Users
    match /users/{userId} {
      // Public GET allowed to support ID-based login and real-time dashboard updates.
      // Knowledge of the unique Concatenated ID (ID_Key) acts as a private token.
      allow get: if true;

      // Users can register themselves ONLY if the document ID matches their credentials pattern.
      allow create: if userId == request.resource.data.encryptedId + "_" + request.resource.data.privateKey;

      // Users can update their own ledger (deposits/allocations) if they have the Secret ID.
      allow update: if true;

      // Strict administrative controls: only authenticated admins can list or delete mandates.
      allow list, delete: if isAdmin();
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if request is from an authenticated Firebase Auth user (Admin)
    function isAdmin() {
      return request.auth != null;
    }

    // Admins have full read/write access to all collections
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Specific rules for the users collection
    match /users/{userId} {
      // Allow anybody to fetch a single user document if they have the ID (for custom login)
      allow get: if true;
      
      // ONLY admins can list all users or create/modify them
      allow list: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
